{
  "compilerOptions": {
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "isolatedModules": true,
    "module": "esnext",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "Bundler",
    "noEmit": true,
    "baseUrl": ".",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "strict": false,
    "noUnusedLocals": true,
    "types": ["node"],
    "allowJs": true
  },
  "include": ["src/**/*", "index.d.ts"],
  "exclude": ["dist", "node_modules"]
}
